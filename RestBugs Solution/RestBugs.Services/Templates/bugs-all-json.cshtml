@using RestBugs.Services.Model
{
  "bugs" : [
@if (Model != null)
{
  foreach (BugDTO bug in Model)
  {
    @:{
    @:  "title" : "@bug.Title",
    @:  "description" : "@bug.Description",
    @:  "assignedTo" : "@bug.AssignedTo",
    @:  "forms" : [
    if (@bug.Status == "Backlog")
    {
    @:    {
    @:      "type" : "move to working",
    @:      "action" : "/bugs/working?id=@bug.Id{&comments}",
    @:      "method" : "POST",
    @:    }
    }
    if (@bug.Status == "Working")
    {
    @:    {
    @:      "type" : "move to backlog",
    @:      "action" : "/bugs/backlog?id=@bug.Id{&comments}",
    @:      "method" : "POST",
    @:    },
    @:    {
    @:      "type" : "move qa next",
    @:      "action" : "/bugs/qa?id=@bug.Id{&comments}",
    @:      "method" : "POST",
    @:    }
    }
    if (@bug.Status == "Done")
    {
    @:    {
    @:      "type" : "move working",
    @:      "action" : "/bugs/working?id=@bug.Id{&comments}",
    @:      "method" : "POST",
    @:    }
    }
    if (@bug.Status == "QA")
    {
    @:    {
    @:      "type" : "move done next",
    @:      "action" : "/bugs/done?id=@bug.Id{&comments}",
    @:      "method" : "POST",
    @:    },
    @:    {
    @:      "type" : "move working",
    @:      "action" : "/bugs/working?id=@bug.Id{&comments}",
    @:      "method" : "POST",
    @:    }
    }
  @:    ]
  @:  },
  }
}
  ],
  "forms" : [ 
  @if (Model == null) 
  {
  @:{
  @:  "type" : "new backlog",
  @:  "action" : "/bugs/done?id={&title,description}",
  @:  "method" : "POST",
  @:}
  }   
  ],
  "links" : [
    { "href" : "/bugs", rel : "index" },
    { "href" : "/bugs/backlog", rel : "backlog" },
    { "href" : "/bugs/working", rel : "working" },
    { "href" : "/bugs/qa", rel: "qa" },
    { "href" : "/bugs/done", rel: "done"} 
  ] 
}       
